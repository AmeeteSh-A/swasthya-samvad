<script>
  // Ensure the DOM is fully loaded before adding event listeners
  document.addEventListener("DOMContentLoaded", function() {
    var searchBar = document.getElementById('searchBar');
    if (searchBar) {
      searchBar.addEventListener('keyup', filterArticles);
    } else {
      console.error("Search bar not found!");
    }
  });

  function filterArticles() {
    var input = document.getElementById('searchBar');
    var filter = input.value.toLowerCase();
    console.log("Filtering articles with filter: " + filter);
    var articles = document.querySelectorAll('.article-item');
    articles.forEach(function(article) {
      // Get the text from the .card-title (including hidden keywords) and .card-text
      var titleElement = article.querySelector('.card-title');
      var descriptionElement = article.querySelector('.card-text');
      var titleText = titleElement ? titleElement.innerText : "";
      var descriptionText = descriptionElement ? descriptionElement.innerText : "";
      // Combine the texts for search
      var combinedText = titleText + " " + descriptionText;
      
      if (combinedText.toLowerCase().includes(filter)) {
        article.style.display = "block";
      } else {
        article.style.display = "none";
      }
      console.log("Combined text: " + combinedText + " -> display set to: " + article.style.display);
    });
  }
</script>



