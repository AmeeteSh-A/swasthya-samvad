<%- include('../partials/header') %>
<div class="container">
  <h2>Patient Consultation</h2>
  <iframe src="<%= consultation.roomUrl %>" 
          style="width: 100%; height: 500px; border: none"
          allow="camera; microphone; fullscreen"></iframe>
  
  <div class="mt-3">
    <% if (consultation.prescription) { %>
      <a href="/patient/consultation/<%= consultation.id %>/prescription" class="btn btn-primary">
        Download Prescription
      </a>
    <% } else { %>
      <p>No prescription available yet.</p>
    <% } %>
  </div>
</div>
<%- include('../partials/footer') %>
